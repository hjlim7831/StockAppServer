<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- User Account Data 관련 SQL -->
<mapper namespace="com.search.result.SearchResultMapper">
	
	<select id="selectAllStock" resultType="com.stock.detail.StockDto">
		SELECT stock_code, company_name FROM stock_list
	</select>
	
	<select id="selectViewCntTop5Stock" resultType="com.stock.detail.StockDto">
		SELECT stock_code, company_name, view_cnt FROM stock_list
		ORDER BY view_cnt DESC
		LIMIT 5	
	</select>

</mapper>